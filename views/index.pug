doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Transaction Processing
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.2/css/bulma.min.css')
    link(rel='stylesheet', href='/css/style.css')
  body
    section.hero.is-link
      .hero-body
        p.title.has-text-centered
          | Transaction Processor &nbsp;
          i.fas.fa-receipt
        p.subtitle.has-text-centered
          | Transactions
    .container
      section.hero.is-small.is-primary
        .hero-body
          p.title.has-text-centered
            | List Of Users &nbsp;
            i.fas.fa-users
      each transaction in transactions 
        .center.is-fullwidth
          button.button.is-medium.is-info.is-rounded
            a(href=`/${transaction.name}`)=transaction.name 
